{
  "timezone": "US/Eastern",
  "entry_window": {"start": "09:30", "end": "13:15"},
  "trace_every_n": 30,

  "vwap_filter": true,

  "stop_mode": "fixed",
  "fixed_sl_pct": 0.10,
  "fixed_sl_pct_by_tier": {"A": 0.07, "B": 0.05},

  "atr_mult": 1.5,

  "be": {"min_minutes": 0},
  "be_after_partials": 1,

  "partial_levels": [
    {"move_pct": 0.003, "exit_fraction": 0.50},
    {"move_pct": 0.006, "exit_fraction": 0.50}
  ],

  "ratchet": {
    "enable": true,
    "levels": [
      {"trigger_move_pct": 0.008, "cushion_pct": 0.002}
    ]
  },

  "ha_exit": {"enable": true, "require_profit": false, "min_profit_pct": 0.0},

  "results_dump_path": "logs/results"
}
