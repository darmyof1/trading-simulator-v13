{
  "stop_mode": "fixed",
  "fixed_sl_pct": 0.10,
  "entry_tiers": ["A", "B"],
  "tier_b": { "enabled": true },
  "use_risk_sizing": true,
  "risk_rules": {
    "risk_model": "percent_of_balance",
    "account_balance": 100000,
    "risk_pct_of_balance": 0.002,
    "max_dollars_risk": 250,
    "size_by_tier": { "A": "highProbSize", "B": "lateTrendSize" },
    "highProbSize": 1.0,
    "lateTrendSize": 0.6,
    "lowProbSize": 0.3
  },
  "tiers": {
    "enable": ["A", "B"],
    "B_rules": {
      "min_minutes_since_cross": 5,
      "pullback_pct": 0.50,
      "max_chase_pct": 0.20
    }
  },
  "entry_window": { "start": "09:30", "end": "13:15" },
  "timezone": "US/Eastern",
  "trace_every_n": 5,
  "SIZE_MODE": "auto",
  "highProbSize": 0.02,
  "lowProbSize": 0.01,
  "lateTrendSize": 0.015,
  "USE_DYNAMIC_CASH": true,
  "EQUITY": 25000,
  "MIN_TRADE_AMOUNT": 500,
  "alpaca_dir": "./data/output/alpaca",
  "bridge_boundary": "09:15:00",
  
  "exits": {
    "enable_ha_5m": true
  },
  "results_dump_path": "logs/results",
  "results_run_label": "risk",
  "debug_signals": true,
  
  "min_size": 1,
  "max_size": 1000,
  "lot_size": 1,

  "fixed_sl_pct_by_tier": { "A": 0.10, "B": 0.05 },
  "atr_mult": 2.0,

  "base_size": 4,

  "vwap_filter": true,
  "allow_shorts": true,

  "be": { "min_minutes": 2 },
  "ratchet": {
    "enable": true,
    "levels": [
      { "trigger_move_pct": 0.05, "cushion_pct": 0.0417 },
      { "trigger_move_pct": 0.10, "cushion_pct": 0.0870 }
    ]
  },

  "ha_exit": { "enable": true, "timeframe_min": 5, "min_profit_pct": 0.0, "require_profit": true },

  "partial_levels": [
    { "move_pct": 0.02, "exit_fraction": 0.02 },
    { "move_pct": 0.05, "exit_fraction": 0.10 },
    { "move_pct": 0.10, "exit_fraction": 0.10 }
  ],
  "partial_one_per_bar": true,
  "be_after_partials": 2,

  "max_trades_per_dir": 1,
  "allow_reentry_after_be": true,

  "warmup_secs": 12000
}
