{
  "timezone": "US/Eastern",
  "entry_window": "09:30-16:00",
  "exits": {
    "enable_ha_5m": true
  },
  "results_dump_path": "logs/results/",
  "results_run_label": "risk",
  "debug_signals": true,
  "use_risk_sizing": true,
  "account_balance": 25000.0,
  "risk_pct_of_balance": 0.002,
  "min_size": 1,
  "max_size": 1000,
  "lot_size": 1,

  "stop_mode": "atr",
  "atr_mult": 2.0,

  "base_size": 4,

  "vwap_filter": true,
  "allow_shorts": true,


  "be": {
    "min_minutes": 5
  },

  "ratchet": {
    "enable": true,
    "levels": [
      { "trigger_move_pct": 0.05, "cushion_pct": 0.0417 },
      { "trigger_move_pct": 0.10, "cushion_pct": 0.0870 }
    ]
  },

  "ha_exit": {
    "enable": true,
    "timeframe_min": 5,
    "min_profit_pct": 0.00,
    "require_profit": true
  },

  "partial_levels": [
    { "move_pct": 0.02, "exit_fraction": 0.02 },
    { "move_pct": 0.05, "exit_fraction": 0.10 },
    { "move_pct": 0.10, "exit_fraction": 0.10 }
  ],
  "partial_one_per_bar": true,
  "be_after_partials": 1,

  "max_trades_per_dir": 1,
  "allow_reentry_after_be": true,

  "warmup_secs": 12000
}
